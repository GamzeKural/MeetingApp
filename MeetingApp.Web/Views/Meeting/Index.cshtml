@using MeetingApp.Entities.Models
@model IEnumerable<Meeting>

@{
    ViewBag.Title = "Meetings";
}
<p>
    @Html.ActionLink("Create New", "Create",null,null, new { @class = "btn btn-primary" })
</p>
<a href="/Register/Logout"><input type="button" class="btn btn-primary btn-sm" style="width:15%;" value="Logout" /></a>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MeetingName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
@*        <th>
            @Html.DisplayNameFor(model => model.Document)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.UserTheCreated.FirstName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MeetingName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
@*            <td>
                @Html.DisplayFor(modelItem => item.Document)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.UserTheCreated.FirstName)
            </td>
        </tr>
    }

</table>
